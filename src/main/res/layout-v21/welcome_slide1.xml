<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/leftcornerbackground"
    android:padding="1dp">

    <ImageView
        android:id="@+id/wlcm1"
        android:layout_width="128dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:background="@drawable/imagebackground"
        android:padding="2dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@id/wlcm1"
        android:background="@drawable/leftcornerbackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="visible">


            <TextView
                android:id="@+id/discount_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical|center_horizontal"
                android:minEms="4"
                android:textColor="@color/places_autocomplete_search_hint"
                android:textSize="12sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:minWidth="100dp"
                    android:minEms="4"
                    android:textColor="@color/blue_grey_800"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:background="@color/grey_300" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/discountprice_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_weight="0.25"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:gravity="top|center_horizontal"
                        android:minWidth="100dp"
                        android:minEms="4"
                        android:textColor="@color/blue_grey_400"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="true"
                        android:background="@color/black"
                        android:foregroundGravity="center_vertical" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/primary_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:ems="8"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    android:maxEms="8"
                    android:minEms="4"
                    android:minLines="2"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/primary_name"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:ems="8"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    android:maxEms="8"
                    android:minEms="4"
                    android:minLines="3"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/_image1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_right" />

        </LinearLayout>

        <TextView
            android:id="@+id/outofstock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:ems="6"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical|center_horizontal"
            android:lines="1"
            android:text="Out of stock"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:visibility="visible" />

        <LinearLayout

            android:id="@+id/_rrr1"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:minWidth="128dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/button2_minus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:adjustViewBounds="true"
                android:background="@color/timestamp"
                android:maxWidth="36dp"
                android:maxHeight="36dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:src="@mipmap/ic_neg"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/rate_km1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal|center"
                android:inputType="textPersonName"
                android:maxWidth="36dp"
                android:maxHeight="36dp"
                android:minEms="2"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/button2_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:adjustViewBounds="true"
                android:background="@color/places_autocomplete_prediction_primary_text"
                android:maxWidth="36dp"
                android:maxHeight="36dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:src="@mipmap/ic_add"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>